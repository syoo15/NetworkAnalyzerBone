    .col-md-4
      .input-group
        span.input-group-addon Increment
        input.form-control(type='text', placeholder='Frequency', id="IncrFreqVH")
        span.input-group-addon Hz
    .col-md-4
      .input-group
        span.input-group-addon Steps
        input.form-control(type='text', placeholder='Num Steps', id="NumStepsVH")